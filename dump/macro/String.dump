extern class String {

	function new(string:String):Void;

	var length(default,null):Int;

	function toUpperCase():String;

	function toLowerCase():String;

	function charAt(index:Int):String;

	function charCodeAt(index:Int):Null<Int>;

	function indexOf(str:String, startIndex:Null<Int>):Int;

	function lastIndexOf(str:String, startIndex:Null<Int>):Int;

	function split(delimiter:String):Array<String>;

	function substr(pos:Int, len:Null<Int>):String;

	function substring(startIndex:Int, endIndex:Null<Int>):String;

	function toString():String;

	@:pure
	static function fromCharCode(code:Int):String;
}