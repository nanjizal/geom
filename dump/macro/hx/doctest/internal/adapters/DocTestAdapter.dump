	public function generateTestMethod(methodName:String, descr:String, assertions:Array<haxe.macro.Expr>) {
		var contextPos = haxe.macro.Context.currentPos();
		var meta = [{name : ":keep", pos : contextPos}];
		return {name : methodName, doc : descr, meta : cast meta, access : [haxe.macro.Access.APublic], kind : haxe.macro.FieldType.FFun({ret : null, args : [], expr : {expr : haxe.macro.ExprDef.EBlock(assertions), pos : contextPos}}), pos : contextPos};
