class haxe.io.BytesOutput extends haxe.io.Output {

	public function new() {
		this.b = new haxe.io.BytesBuffer();
	}

	var b:haxe.io.BytesBuffer;

	public var length(get,never):Int;

	function get_length() {
		return this.b.get_length();
	}

	public function writeByte(c:Int) {
		this.b.addByte(c);
	}

	public function writeBytes(buf:haxe.io.Bytes, pos:Int, len:Int) {
		this.b.addBytes(buf, pos, len);
		return len;
	}

	public function getBytes() {
		return this.b.getBytes();
	}
}