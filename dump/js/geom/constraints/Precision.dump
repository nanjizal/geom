class geom.constraints.Precision {

	public static function floatToStringPrecision(n:Float, prec:Int) {
		if ((n == 0)) {
			var _g = [];
			{
				var _g1 = 0;
				var _g2 = prec;
				while ((_g1 < _g2)) {
					var i = _g1 ++;
					_g.push("0");
				};
			};
			return "0." + _g.join("");
		};
		var minusSign = n < 0.0;
		n = Math.abs(n);
		var intPart = Math.floor(n);
		var p = Math.pow(10, prec);
		var fracPart = Math.round(p * (n - intPart));
		var buf = new StringBuf();
		if ((minusSign)) buf.addChar(45);
		buf.add(if ((intPart == null)) "null" else "" + intPart);
		if ((fracPart == 0)) {
			buf.addChar(46);
			{
				var _g = 0;
				var _g1 = prec;
				while ((_g < _g1)) {
					var i = _g ++;
					buf.addChar(48);
				};
			};
		} else {
			buf.addChar(46);
			p /= 10;
			var nZeros = 0;
			while ((fracPart < p)) {
				p /= 10;
				buf.addChar(48);
			};
			buf.add(fracPart);
		};
		return buf.toString();
	}

	public static function max4(f0:Float, f1:Float, f2:Float, f3:Float) {
		return Math.round(Math.max(Math.max(Math.max(f0, f1), f2), f3));
	}

	public static function max3(f0:Float, f1:Float, f2:Float) {
		return Math.round(Math.max(Math.max(f0, f1), f2));
	}
}