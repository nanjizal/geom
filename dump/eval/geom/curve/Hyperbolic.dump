@:used
class geom.curve.Hyperbolic {

	public static inline function sinh(x:Float) {
		var y = Math.exp(x);
		return (y - 1. / y) / 2.;
	}

	public static inline function cosech(x:Float) {
		var y = Math.exp(x);
		return 1 / ((y - 1. / y) / 2.);
	}

	public static inline function sech(x:Float) {
		var y = Math.exp(x);
		return 1 / ((y + 1. / y) / 2.);
	}

	public static inline function cosh(x:Float) {
		var y = Math.exp(x);
		return (y + 1. / y) / 2.;
	}

	public static inline function coth(x:Float) {
		var y = Math.exp(x);
		var y = Math.exp(x);
		return (y + 1. / y) / 2. / ((y - 1. / y) / 2.);
	}

	public static inline function tanh(x:Float) {
		var a = Math.exp(x);
		var b = Math.exp(- x);
		if ((a == Math.POSITIVE_INFINITY)) return 1. else if ((b == Math.POSITIVE_INFINITY)) return -1. else return (a - b) / (a + b);
	}

	public static inline function acosh(x:Float) {
		return Math.log(x + Math.sqrt(x * x - 1.));
	}

	public static inline function asinh(x:Float) {
		return Math.log(x + Math.sqrt(x * x + 1.));
	}

	public static inline function atanh(x:Float) {
		return Math.log((1. + x) / (1. - x)) / 2.;
	}
}